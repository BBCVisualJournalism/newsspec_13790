<div class="section section--questions" id="section--questions">
    <div id="quiz-body" class="quiz-body">
        <div class="questions hidden">

        <% for (var i = 1; i < 13; i++) {

            var question_number           = eval('question_' + i + '_number');
            var question_text             = eval('question_' + i + '_question');
            var question_highest          = eval('question_' + i + '_highest');
            var question_high             = eval('question_' + i + '_high');
            var question_med              = eval('question_' + i + '_med');
            var question_low              = eval('question_' + i + '_low');
            var question_lowest           = eval('question_' + i + '_lowest');
            var question_score_highest    = eval('question_' + i + '_score_highest');
            var question_score_high       = eval('question_' + i + '_score_high');
            var question_score_med        = eval('question_' + i + '_score_med');
            var question_score_low        = eval('question_' + i + '_score_low');
            var question_score_lowest     = eval('question_' + i + '_score_lowest');
            var question_feedback         = eval('question_' + i + '_feedback');
        %>

             <div class="question question<%= i %>" data-question="<%= i %>">
               <div class="bbc-news-vj-grid-wrapper">
                    <div class="bbc-news-vj-grid-wrapper__fluid-inner">
                        <picture>
                            <source
                                media="(min-width: 1008px)"
                                srcset="<%= pathStatic %>/common/img/medal_<%= i-1 %>_desktop.png?v=<%= version %>">
                            <source
                                media="(min-width: 320px)"
                                srcset="<%= pathStatic %>/common/img/medal_<%= i-1 %>_mobile.png?v=<%= version %>">

                            <img class="question__icon question<%= i %>__icon"
                                 src="<%= pathStatic %>/common/img/medal_<%= i-1 %>_desktop.png?v=<%= version %>"
                                 srcset="<%= pathStatic %>/common/img/medal_<%= i-1 %>_desktop.png?v=<%= version %>"
                                 alt="">
                        </picture>
                        <div class="question__number"><%= question_number %></div>
                        <p class="question__text"><%= question_text %></p>
                        <div class="answers">
                            <button class="button--answer" type="button" data-score="<%= question_score_highest %>"><%= question_highest %></button>
                            <button class="button--answer" type="button" data-score="<%= question_score_high %>"><%= question_high %></button>
                            <button class="button--answer" type="button" data-score="<%= question_score_med %>"><%= question_med %></button>
                            <button class="button--answer" type="button" data-score="<%= question_score_low %>"><%= question_low %></button>
                            <button class="button--answer" type="button" data-score="<%= question_score_lowest %>"><%= question_lowest %></button>
                        </div>
                    </div>
                </div>
                <div class="question__feedback question<%= i %>__feedback hidden">
                    <div class="chevron">
                        <p class="feedback__text"><%= question_feedback %></p>
                    </div>
                </div>
            </div>

        <% } %>

            <!-- question 13 moved to hero section -->

            <div class="question question14" data-question="14">
               <div class="bbc-news-vj-grid-wrapper">
                    <div class="bbc-news-vj-grid-wrapper__fluid-inner">
                        <img class="question__icon question14__icon" src="<%= pathStatic %>/common/img/medal_12_desktop.png" alt="<%= olympic_medal_icon_alt_text %> <%= question_14_number %>" />
                        <div class="question__number"><%= question_14_number %></div>
                        <p class="question__text"><%= question_14_question %></p>
                        <div class="answers">
                            <button class="button--answer activity-level--answer" type="button" data-score="0" data-activity-level="3"> <%= question_14_high %> </button>
                            <button class="button--answer activity-level--answer" type="button" data-score="0" data-activity-level="2"> <%= question_14_med %>  </button>
                            <button class="button--answer activity-level--answer" type="button" data-score="0" data-activity-level="1"> <%= question_14_low %>  </button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
