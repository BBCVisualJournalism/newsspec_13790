<div class="section section--hero" id="section--hero">
    <div class="hero__titles">
        <h1 class="hero__heading"><%= hero_title %></h1>
        <p class="hero__subheading"><%= hero_subtitle %></p>
        <div class="question question--age" data-question="13" style="display:none;">
            <p><%= question_age_question %></p>
            <div class="answers">
                <input class="age-input" type="number" name="age--answer" value="35" min="5" max="110" maxlength="3">
                <button class="button--next button--answer age-button" type="button" data-score="0"> <%= start_quiz %> </button>
            </div>
        </div>
        <div class="no-js-message"><%= legacy_ie_message %></div>
    </div>
</div>
<div class="hero__chevron"></div>
<div class="hero__chevron__bottom"></div>

